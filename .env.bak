# Environment variables for Hedwig Backend

# Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Expo Public Environment Variables
# These are embedded in the app at build time
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_APP_NAME=Hedwig
EXPO_PUBLIC_APP_SCHEME=hedwig

# Privy Configuration (get from https://dashboard.privy.io)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret
PRIVY_VERIFICATION_KEY=your_privy_verification_key
